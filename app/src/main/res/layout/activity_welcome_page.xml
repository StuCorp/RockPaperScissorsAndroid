<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.stuartbryce.rockpaperscissors.AboutPage">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="16dp" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="353dp"
        android:layout_height="256dp"
        tools:layout_editor_absoluteX="5dp"
        android:id="@+id/scrollView2"
        app:layout_constraintBottom_toTopOf="@+id/start_game_button"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/welcome_page">

        <TextView
            android:id="@+id/about_tv"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:text="@string/rpg_how"
            android:textSize="18sp"
            tools:layout_conversion_absoluteX="3dp"
            tools:layout_conversion_absoluteY="102dp"
            tools:layout_conversion_absoluteWidth="356dp"
            tools:layout_conversion_absoluteHeight="476dp"
            tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="-2dp" />
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/welcome_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Rock Paper Scissors"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/start_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="buttonClick"
        android:text="Play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />
</android.support.constraint.ConstraintLayout>
